    <!--Signup Button Style-->
    <Style TargetType="Button" 
           x:Key="Signup">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#F24822"/>
        <Setter Property="Foreground" Value="#F24822"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Content" Value="Sign Up"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="20,0,20,0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="root"
                            Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            Padding="10,1,10,1"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter x:Name="contentPresenter"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <!--<Setter Property="Background" Value="#F24822"/>
                            <Setter Property="Foreground" Value="White"/>-->
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                                  Storyboard.TargetName="root"
                                                  Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                  To="#F24822" Duration="0:0:0.35"/>
                                        <ColorAnimation 
                                                  Storyboard.TargetName="contentPresenter"
                                                  Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                  To="White" Duration="0:0:0.27"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                                  Storyboard.TargetName="root"
                                                  Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                  To="Transparent" Duration="0:0:0.35"/>
                                        <ColorAnimation 
                                                  Storyboard.TargetName="contentPresenter"
                                                  Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                  To="#F24822" Duration="0:0:0.27"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--login Button Style-->
    <Style TargetType="Button" x:Key="Login">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="#4F4E4E"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Content" Value="Login"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Margin" Value="20,0,20,0"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="root"
                        Background="{TemplateBinding Background}"
                        Padding="10,1,10,1"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <ContentPresenter x:Name="content"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="{TemplateBinding Padding}"
                                      RenderTransformOrigin="0.5,0.5">
                            <ContentPresenter.RenderTransform>
                                <TranslateTransform X="0" Y="0"/>
                            </ContentPresenter.RenderTransform>
                        </ContentPresenter>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="shakeSb">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames
                                        Storyboard.TargetName="content"
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.03" Value="8"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.06" Value="-8"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.09" Value="6"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.12" Value="-6"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:0.15" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                        Storyboard.TargetName="content"
                                        Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                        To="0" Duration="0:0:0.05"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


