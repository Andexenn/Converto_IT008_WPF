    <Style TargetType="{x:Type RadioButton}" x:Key="MenuButtonTheme">
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\INTER-VARIABLEFONT_OPSZ,WGHT.TTF"/>
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="FontSize" Value="12.5"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Foreground" Value="#4F4E4E"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <ControlTemplate.Resources>
                        <SolidColorBrush x:Key="BgBrush" Color="#00FFFFFF"/>
                        <SolidColorBrush x:Key="FgBrush" Color="#FF000000"/>
                        <SolidColorBrush x:Key="AccentBrush" Color="#FFDD2D2D"/>
                    </ControlTemplate.Resources>

                    <Grid x:Name="Root" Background="{StaticResource BgBrush}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <fa:FontAwesome x:Name="Icon"
                             Icon="{TemplateBinding Tag}"
                             VerticalAlignment="Center"
                             Padding="10,0,0,0"
                             Margin="0,0,10,0"
                             Foreground="{TemplateBinding Foreground}"/>

                        <TextBlock x:Name="Text"
                                     Grid.Column="1"
                                     Text="{TemplateBinding Content}"
                                     VerticalAlignment="Center"
                                     Padding="10,0,0,0"
                                     Foreground="{TemplateBinding Foreground}"/>
                    </Grid>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Root"
                                                  Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                  To="#FFD7CF" Duration="0:0:0.15"/>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Text"
                                                  Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                  To="#FFDD2D2D" Duration="0:0:0.15"/>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Icon"
                                                  Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                  To="#FFDD2D2D" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Root"
                                                  Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                                  To="#00FFFFFF" Duration="0:0:0.15"/>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Text"
                                                  Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                  To="#FF000000" Duration="0:0:0.15"/>
                                        <ColorAnimation
                                                  Storyboard.TargetName="Icon"
                                                  Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)"
                                                  To="#FF000000" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
