<UserControl x:Class="Converto_IT008_WPF.Views.HomepageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:local="clr-namespace:Converto_IT008_WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="#FFFBFBFB" Height="538">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox Style="{StaticResource Search}" Width="754"/>

            <Grid Grid.Row="1" Margin="0,40,0,40" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#F4F4F4" CornerRadius="10" Margin="10,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="7" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel Margin="0, 15,0,0">
                        <TextBlock Text="Video &amp; Audio" Style="{StaticResource HeaderHomepage}"/>
                        <Border Height="1" BorderBrush="#4F4E4E" BorderThickness="0,0,0,1" Margin="0,10,0,0" Width="120"/> 
                        <Button Content="MP4 to MP3" Style="{StaticResource TextOption}"/>
                        <Button Content="Video to MP3" Style="{StaticResource TextOption}"/>
                        <Button Content="MOV to MP4" Style="{StaticResource TextOption}"/>
                        <Button Content="MP3 to OGG" Style="{StaticResource TextOption}"/>
                    </StackPanel>
                </Border>

                <Border Background="#F4F4F4" CornerRadius="10" Grid.Column="1" Margin="10,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="7" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel Margin="0, 15,0,0">
                        <TextBlock Text="Image" Grid.Column="2" Style="{StaticResource HeaderHomepage}"/>
                        <Border Height="1" BorderBrush="#4F4E4E" BorderThickness="0,0,0,1" Margin="0,10,0,0" Width="120"/>
                        <Button Content="WEBP to PNG" Style="{StaticResource TextOption}" Command="{Binding GoToWEBPtoPNGCommand}"/>
                        <Button Content="JFIF to PNG" Style="{StaticResource TextOption}"/>
                        <Button Content="PNG to SVG" Style="{StaticResource TextOption}"/>
                        <Button Content="HEIC to JPG" Style="{StaticResource TextOption}"/>
                        <Button Content="HEIC to PNG" Style="{StaticResource TextOption}"/>
                        <Button Content="WEBP to JPG" Style="{StaticResource TextOption}"/>
                    </StackPanel>
                </Border>

                <Border Background="#F4F4F4" CornerRadius="10" Grid.Column="2" Margin="10,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="7" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel Margin="0, 15,0,0">
                        <TextBlock Text="PDF &amp; Document" Grid.Column="4" Style="{StaticResource HeaderHomepage}"/>
                        <Border Height="1" BorderBrush="#4F4E4E" BorderThickness="0,0,0,1" Margin="0,10,0,0" Width="120"/>
                        <Button Content="PDF to Word" Style="{StaticResource TextOption}"/>
                        <Button Content="PDF to JPG" Style="{StaticResource TextOption}"/>
                        <Button Content="PDF to EPUB" Style="{StaticResource TextOption}"/>
                        <Button Content="EPUB to PDF" Style="{StaticResource TextOption}"/>
                        <Button Content="HEIC to PDF" Style="{StaticResource TextOption}"/>
                        <Button Content="DOCX to PDF" Style="{StaticResource TextOption}"/>
                        <Button Content="JPG to PDF" Style="{StaticResource TextOption}"/>
                    </StackPanel>
                </Border>


                <Border Background="#F4F4F4" CornerRadius="10" Grid.Column="3" Margin="10,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="7" Opacity="0.7"/>
                    </Border.Effect>
                    <StackPanel Margin="0, 15,0,0">
                        <TextBlock Text="GIF" Grid.Column="6" Style="{StaticResource HeaderHomepage}" />
                        <Border Height="1" BorderBrush="#4F4E4E" BorderThickness="0,0,0,1" Margin="0,10,0,0" Width="120"/>
                        <Button Content="Video to GIF" Style="{StaticResource TextOption}"/>
                        <Button Content="MP4 to GIF" Style="{StaticResource TextOption}"/>
                        <Button Content="WEBM to GIF" Style="{StaticResource TextOption}"/>
                        <Button Content="APNG to GIF" Style="{StaticResource TextOption}"/>
                        <Button Content="GIF to MP4" Style="{StaticResource TextOption}"/>
                        <Button Content="GIF to APNG" Style="{StaticResource TextOption}"/>
                        <Button Content="MOV to GIF" Style="{StaticResource TextOption}"/>
                        <Button Content="AVI to GIF" Style="{StaticResource TextOption}"/>
                    </StackPanel>
                </Border>


            </Grid>

        </Grid>

    </ScrollViewer>
</UserControl>
