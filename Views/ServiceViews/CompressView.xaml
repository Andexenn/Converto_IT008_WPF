<UserControl x:Class="Converto_IT008_WPF.Views.ServiceViews.CompressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Converto_IT008_WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200"
             FontFamily="Segoe UI" FontSize="14"
             Background="{StaticResource Brush.MainBG}">

    <UserControl.Resources>
        <SolidColorBrush x:Key="Color.Bg" Color="#050505"/>
        <SolidColorBrush x:Key="Color.Card" Color="#121212"/>
        <SolidColorBrush x:Key="Color.Border" Color="#333333"/>
        <SolidColorBrush x:Key="Color.Brand" Color="#FF1E1E"/>
        <SolidColorBrush x:Key="Color.Text.Primary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="Color.Text.Secondary" Color="#888888"/>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:DropEventArgsConverter x:Key="DropEventArgsConverter"/>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/> 

        <Style x:Key="ModernSliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="TrackBackground" Height="2" CornerRadius="1" Background="#333333" VerticalAlignment="Center"/>
                            <Canvas VerticalAlignment="Center" Height="4">
                                <Border x:Name="PART_SelectionRange" Height="2" CornerRadius="1" Background="{StaticResource Color.Brand}" Visibility="Visible"/>
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="16" Height="16">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource Color.Brand}" Stroke="White" StrokeThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal" Background="Transparent">
                            <Border Width="16" Height="16" CornerRadius="8" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Background="Transparent">
                                <Ellipse x:Name="Dot" Width="8" Height="8" Fill="{StaticResource Color.Brand}" Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                <Setter Property="BorderBrush" Value="{StaticResource Color.Brand}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="BorderBrush" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" 
                Grid.ColumnSpan="2"
                CornerRadius="8"
                Background="#111111"
                BorderBrush="#333333"
                BorderThickness="1" />

                <Path x:Name="Arrow" 
              Grid.Column="1" 
              Fill="White"
              HorizontalAlignment="Center" 
              VerticalAlignment="Center"
              Data="M 0 0 L 4 4 L 8 0"
              Stroke="White" StrokeThickness="1"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource Color.Brand}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="DarkComboBoxStyle" TargetType="{x:Type ComboBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#111111"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                  Template="{StaticResource ComboBoxToggleButton}" 
                                  Grid.Column="2" 
                                  Focusable="false"
                                  IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press">
                            </ToggleButton>

                            <ContentPresenter Name="ContentSite" 
                                      IsHitTestVisible="False" 
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="15,0,30,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left" />

                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" 
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                    Background="#1A1A1A"
                                    BorderThickness="1"
                                    BorderBrush="#333333"
                                    CornerRadius="8"
                                    Margin="0,5,0,0">
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" Padding="{TemplateBinding Padding}" Background="Transparent" CornerRadius="4">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource Color.Brand}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Background="{StaticResource Color.Bg}">
        <Grid Background="{StaticResource Color.Bg}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="40,40,40,20">
                <TextBlock Text="Compress" FontSize="36" FontWeight="Bold" Foreground="{StaticResource Color.Text.Primary}"/>
                <TextBlock Text="Reduce the size of your files without compromising quality" 
                           FontSize="14" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5,0,0"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="40,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid Height="360">

                        <Border x:Name="UploadZoneBackground" 
                                Background="#222222" 
                                CornerRadius="12" 
                                Opacity="0.5"/>

                        <Rectangle x:Name="UploadZoneBorder"
                                   Stroke="{StaticResource Color.Text.Secondary}" 
                                   StrokeThickness="1" 
                                   StrokeDashArray="4 4" 
                                   RadiusX="12" RadiusY="12"
                                   Fill="Transparent"
                                   IsHitTestVisible="False"
                                   Opacity="0.5"/>

                        <Grid AllowDrop="True" 
                              DragOver="File_DragOver"
                              DragEnter="File_DragEnter"
                              DragLeave="File_DragLeave"
                              Drop="File_Drop"
                              Background="Transparent"
                              Cursor="Hand"
                              Visibility="{Binding NotUploaded, Converter={StaticResource BoolToVisibilityConverter}}">

                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Drop">
                                    <i:InvokeCommandAction Command="{Binding DropFileCommand}" 
                                                           PassEventArgsToCommand="True"
                                                           EventArgsConverter="{StaticResource DropEventArgsConverter}"/>
                                </i:EventTrigger>

                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding PickFileCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                <Grid Margin="0,0,0,15" HorizontalAlignment="Center">
                                    <fa:FontAwesome Icon="File" FontSize="50" Foreground="{StaticResource Color.Brand}"/>
                                    <fa:FontAwesome Icon="ArrowUp" 
                                                    FontSize="20" 
                                                    Foreground="#1e1e1e" 
                                                    VerticalAlignment="Center" 
                                                    HorizontalAlignment="Center" 
                                                    Margin="0,5,0,0"/>
                                </Grid>

                                <TextBlock Text="Click to upload or drop files here" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="16" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,0,0,5"/>

                                <TextBlock Text="PNG, JPG, WEBP, MP4, MP3... (max. 10MB)" 
                                           Foreground="{StaticResource Color.Text.Secondary}" 
                                           FontSize="13" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                        </Grid>
                        <Button Command="{Binding PreviousPreviewedImageCommand}"
                                Opacity="0.7"
                                BorderThickness="0"
                                Cursor="Hand"
                                Panel.ZIndex="10"
                                Width="40" Height="30" HorizontalAlignment="Left" Content="Prev" Foreground="{StaticResource Brush.Brand}"
                                Visibility="{Binding Uploaded, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button Command="{Binding NextPreviewedImageCommand}"
                                Opacity="0.7"
                                BorderThickness="0"
                                Cursor="Hand"
                                Panel.ZIndex="10"
                                Width="40" Height="30" HorizontalAlignment="Right" Content="Next" Foreground="{StaticResource Brush.Brand}"
                                Visibility="{Binding Uploaded, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <Grid Cursor="Hand"
                              Visibility="{Binding Uploaded, Converter={StaticResource BoolToVisibilityConverter}}">

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="True">
                                <Image x:Name="ImgUploadedPreview" 
                                       Source="{Binding PreviewImage}" 
                                       Stretch="Uniform" 
                                       MaxHeight="340"/>
                            </StackPanel>

                            <!--co the cho phep xoa 1 so anh-->
                            <Button Command="{Binding DeleteCurrentPreviewedFileCommand}" 
                                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                                    Width="30" Height="30" Background="#88000000" BorderThickness="0" Foreground="White" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border CornerRadius="15" Background="{TemplateBinding Background}">
                                            <fa:FontAwesome Icon="Close" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Grid>

                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding PickFileCommand}"
                                Grid.Column="0" 
                                Cursor="Hand" 
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Bold"
                                Visibility="{Binding Notuploaded, Converter={StaticResource BoolToVisibilityConverter}}">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource Brush.Brand}"/>
                                    <Setter Property="Height" Value="45"/>
                                    <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <fa:FontAwesome Icon="CloudUpload" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                        <ContentPresenter/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D90404"/>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>

                                </Style>
                            </Button.Style>

                            <Button.Effect>
                                <DropShadowEffect Color="#F90606" 
                                                  BlurRadius="15" 
                                                  ShadowDepth="2" 
                                                  Direction="270" 
                                                  Opacity="1"/>
                            </Button.Effect>

                            <Button.Content>Upload Image</Button.Content>
                        </Button>

                        <Button Grid.Column="2" 
                                Command="{Binding ClearUploadFilesCommand}"
                                Cursor="Hand" 
                                Height="45" 
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Bold">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#1A1A1A"/>

                                    <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#33FFFFFF" BorderThickness="1">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#252525"/>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Content>Clear</Button.Content>
                        </Button>
                    </Grid>

                    <Border Margin="0,20,0,0" Background="#111111" CornerRadius="6" Height="44" BorderBrush="#333333" BorderThickness="1"
                            Visibility="{Binding IsCompressed, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Download your files here" Foreground="White" TextDecorations="Underline" Cursor="Hand" FontWeight="SemiBold" Margin="5,0,0,0">
                                <TextBlock.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding DownloadFilesCommand}" />
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Grid.Column="2" 
                        Background="{StaticResource Color.Card}" 
                        CornerRadius="16" 
                        BorderBrush="{StaticResource Color.Border}" 
                        BorderThickness="1" 
                        Padding="30"
                        VerticalAlignment="Center" Height="488">

                    <StackPanel>
                        <TextBlock Text="Settings" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

                        <Grid Margin="0,0,0,25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="Type Format" 
                                       Foreground="White" 
                                       FontWeight="SemiBold" 
                                       VerticalAlignment="Center"/>

                            <ComboBox Grid.Column="1" 
                                      Style="{StaticResource DarkComboBoxStyle}"
                                      Width="180"
                                      Name="ComboBoxTypeFormat"
                                      SelectedIndex="0"
                                      ItemsSource="{Binding TypeFormats}"
                                      SelectedItem="{Binding SelectedTypeFormat}">
                            </ComboBox>
                        </Grid>

                        <TextBlock Text="Output folder" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <RadioButton Grid.Column="0" 
                                         Content="Default output folder" 
                                         HorizontalAlignment="Left"
                                         IsChecked="{Binding SelectedOutputFolderMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default}"/>

                            <RadioButton Grid.Column="1" 
                                         Content="Customized folder"
                                         HorizontalAlignment="Right"
                                         IsChecked="{Binding SelectedOutputFolderMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Custom}"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,30" HorizontalAlignment="Right">
                            <Button Content="Change" 
                                    Foreground="Gray" 
                                    FontSize="14" FontWeight="SemiBold"
                                    Cursor="Hand" Margin="0,0,20,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Command="{Binding ChangeCustomOutputFolderCommand}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />

                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            <TextBlock Text="{Binding CustomOutputFolderPath}" VerticalAlignment="Center" Foreground="#444444" FontSize="13" HorizontalAlignment="Right"/>
                        </StackPanel>

                        <TextBlock Text="Quality" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        <Slider Maximum="100" Minimum="0" Value="{Binding SliderValue, Mode=TwoWay}" Margin="0,0,0,10" 
                                IsSnapToTickEnabled="True" TickFrequency="50"
                                Style="{StaticResource ModernSliderStyle}"/>

                        <Grid Margin="0,0,0,65">
                            <TextBlock Text="Low" Foreground="#666666" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="Medium" Foreground="#666666" HorizontalAlignment="Center" FontSize="12"/>
                            <TextBlock Text="High" Foreground="#666666" HorizontalAlignment="Right" FontSize="12"/>
                        </Grid>

                        <Button Height="52" Cursor="Hand"
                                Command="{Binding CompressFilesCommand}"
                                Visibility="{Binding IsNotCompressing, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{StaticResource Color.Brand}" CornerRadius="8">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <fa:ImageAwesome Icon="FolderOpen" Foreground="White" Height="16" Margin="0,0,10,0"/>
                                            <TextBlock Text="Compress files" Foreground="White" FontWeight="Bold" FontSize="16"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Effect>
                                <DropShadowEffect Color="#F90606" 
                                                  BlurRadius="15" 
                                                  ShadowDepth="2" 
                                                  Direction="270" 
                                                  Opacity="1"/>
                            </Button.Effect>
                        </Button>

                        <fa:ImageAwesome Visibility="{Binding IsCompressing, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" Margin="40,50,40,40">
                <TextBlock Text="Recently Processed" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                <Border Background="#121212" CornerRadius="10" BorderBrush="#222222" BorderThickness="1">
                    <StackPanel>
                        <Grid Background="#1A1A1A" Height="45">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="FILENAME" Grid.Column="0" Foreground="{StaticResource Color.Text.Secondary}" FontWeight="Bold" FontSize="11" Margin="25,0" VerticalAlignment="Center"/>
                            <TextBlock Text="DATE" Grid.Column="1" Foreground="{StaticResource Color.Text.Secondary}" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                            <TextBlock Text="STATUS" Grid.Column="2" Foreground="{StaticResource Color.Text.Secondary}" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="FILESIZE" Grid.Column="3" Foreground="{StaticResource Color.Text.Secondary}" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Text="OUTPUTSIZE" Grid.Column="4" Foreground="{StaticResource Color.Text.Secondary}" FontWeight="Bold" FontSize="11" HorizontalAlignment="Right" Margin="0,0,25,0" VerticalAlignment="Center"/>
                        </Grid>

                        <fa:ImageAwesome Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,20,0,0"/>
                        
                        <!--<Border BorderBrush="#222222" BorderThickness="0,1,0,0" Height="55">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="profile-picture.png" 
                                           Grid.Column="0" 
                                           Foreground="White" 
                                           Margin="25,0" 
                                           VerticalAlignment="Center" 
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis" 
                                           TextWrapping="NoWrap"
                                           ToolTip="profile-picture.png"/>
                                <TextBlock Text="5 hours ago" Grid.Column="1" Foreground="#888888" VerticalAlignment="Center"/>

                                <Border Grid.Column="2" Background="#103820" CornerRadius="15" Padding="15,5" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="Completed" Foreground="#4ADE80" FontSize="12" FontWeight="SemiBold"/>
                                </Border>

                                <TextBlock Text="1 MB" Grid.Column="3" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="0.2 MB" Grid.Column="4" Foreground="White" HorizontalAlignment="Right" Margin="0,0,25,0" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>-->

                        <ScrollViewer  VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding UserTasks}" Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0" Padding="20,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding OriginalFilePath}" Width="350" HorizontalAlignment="Left" TextTrimming="CharacterEllipsis" Foreground="White" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" Text="{Binding CreatedAt}" HorizontalAlignment="Center" Foreground="#888888" VerticalAlignment="Center"/>

                                                <Border Grid.Column="2" Background="#103820" CornerRadius="12" HorizontalAlignment="Center" Padding="15,4">

                                                    <TextBlock Text="Completed" Foreground="#4ADE80" FontWeight="SemiBold" FontSize="12"/>
                                                </Border>

                                                <TextBlock Grid.Column="3" Text="{Binding InputFileSize}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                                <TextBlock Text="{Binding OutputFileSize}" Grid.Column="4" Foreground="White" HorizontalAlignment="Right" Margin="0,0,25,0" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                        </ScrollViewer>

                    </StackPanel>
                </Border>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</UserControl>