<UserControl x:Class="Converto_IT008_WPF.Views.UserViews.SignUpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:custom="clr-namespace:PlaceholderTextBoxControl" 
             xmlns:userviewmodel="clr-namespace:Converto_IT008_WPF.ViewModels.UserViewModel"
             xmlns:views="clr-namespace:Converto_IT008_WPF.Views.Popups"
             d:DataContext="{d:DesignInstance Type=userviewmodel:SignUpViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1200"
             FontFamily="/Converto_IT008_WPF;component/Resources/#Inter"
             FontSize="14">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Converto_IT008_WPF;component/Resources/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <Style x:Key="InputContainerStyle" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource Brush.Stroke}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{StaticResource Color.Line}" BlurRadius="0" ShadowDepth="0" Opacity="0" RenderingBias="Performance"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="{StaticResource Color.Line}" BlurRadius="10" ShadowDepth="0" Opacity="0.6" RenderingBias="Performance"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                    <Trigger Property="IsKeyboardFocusWithin" Value="True">
                        <Setter Property="BorderBrush" Value="#007ACC"/>
                        <Setter Property="Background" Value="#1A1A1A"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="{StaticResource Color.Line}" BlurRadius="20" ShadowDepth="0" Opacity="1" RenderingBias="Performance"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="{x:Type custom:PlaceholderTextBox}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CaretBrush" Value="{StaticResource Brush.Brand}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Padding" Value="15,0,10,0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type custom:PlaceholderTextBox}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" VerticalAlignment="Center"/>
                                <TextBlock x:Name="placeholder" 
                                           Text="{TemplateBinding Placeholder}"
                                           Foreground="{StaticResource Brush.Text.Secondary}"
                                           FontSize="{TemplateBinding FontSize}"
                                           VerticalAlignment="Center"
                                           Margin="15,0,0,0"
                                           IsHitTestVisible="False"
                                           Visibility="Collapsed"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Text" Value="">
                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter TargetName="placeholder" Property="Visibility" Value="Visible"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SocialButtonStyle" TargetType="Button">
                <Setter Property="Height" Value="45"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Background" Value="{StaticResource Brush.MainBG}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#252525"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.BG.Gradient}">

        <Border Background="{StaticResource Brush.BG.Shape}"
                CornerRadius="20"
                Width="450"
                Height="640"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="40,40,40,20"
                BorderThickness="1"
                BorderBrush="{StaticResource Brush.Line}">

            <Border.Effect>
                <DropShadowEffect BlurRadius="100" 
                                  ShadowDepth="1" 
                                  Opacity="1" 
                                  Color="{StaticResource Color.Line}"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="{DynamicResource Lang.SignUpView.Title}" 
                               Foreground="White" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="{DynamicResource Lang.SignUpView.Subtitle}" 
                               Foreground="{StaticResource Brush.Text.Secondary}" 
                               FontSize="14" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <Border Grid.Row="1"
                        Background="{StaticResource Brush.MainBG}" 
                        CornerRadius="10" 
                        Height="50" 
                        Margin="0,0,0,25"
                        Padding="4">
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="SlidingBox" Grid.ColumnSpan="2"
                                Width="181" 
                                HorizontalAlignment="Left"
                                Background="{StaticResource Brush.Brand}" 
                                CornerRadius="8">
                            
                            <Border.Effect>
                                <DropShadowEffect Color="{StaticResource Color.Brand}" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="SliderTransform" X="0"/>
                            </Border.RenderTransform>
                        </Border>

                        <Button x:Name="btnSignUp"
                                Grid.Column="0"
                                Content="{DynamicResource Lang.SignUpView.Toggle_SignUp}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                Cursor="Hand">
                            
                            <Button.Foreground>
                                <SolidColorBrush Color="White"/>
                            </Button.Foreground>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnLogin"
                                Grid.Column="1"
                                Content="{DynamicResource Lang.SignUpView.Toggle_LogIn}"
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Command="{Binding DataContext.ShowLoginOverlayCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                            
                            <Button.Foreground>
                                <SolidColorBrush Color="#888888"/>
                            </Button.Foreground>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent" CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>

                            <Button.Triggers>
                                <EventTrigger RoutedEvent="MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SliderTransform" 
                                                             Storyboard.TargetProperty="X" 
                                                             To="181" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ColorAnimation Storyboard.TargetName="btnSignUp" 
                                                            Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" 
                                                            To="#888888" Duration="0:0:0.3"/>

                                            <ColorAnimation Storyboard.TargetName="btnLogin" 
                                                            Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" 
                                                            To="White" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <EventTrigger RoutedEvent="MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="SliderTransform" 
                                                             Storyboard.TargetProperty="X" 
                                                             To="0" Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>

                                            <ColorAnimation Storyboard.TargetName="btnSignUp" 
                                                            Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" 
                                                            To="White" Duration="0:0:0.3"/>

                                            <ColorAnimation Storyboard.TargetName="btnLogin" 
                                                            Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" 
                                                            To="#888888" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" VerticalAlignment="Top">
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Style="{StaticResource InputContainerStyle}">
                            <custom:PlaceholderTextBox Placeholder="{DynamicResource Lang.SignUpView.Placeholder_FirstName}"
                                                       Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       TabIndex="0"
                                                       CaretBrush="White"/>
                        </Border>

                        <Border Grid.Column="2" Style="{StaticResource InputContainerStyle}">
                            <custom:PlaceholderTextBox Placeholder="{DynamicResource Lang.SignUpView.Placeholder_LastName}"
                                                       Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       TabIndex="1"
                                                       CaretBrush="White"/>
                        </Border>
                    </Grid>

                    <Border Style="{StaticResource InputContainerStyle}">
                        <custom:PlaceholderTextBox Placeholder="{DynamicResource Lang.SignUpView.Placeholder_Email}"
                                                   Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   TabIndex="2"
                                                   CaretBrush="White"/>
                    </Border>

                    <Border Style="{StaticResource InputContainerStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <custom:PlaceholderTextBox Grid.Column="0"
                                                       Placeholder="{DynamicResource Lang.SignUpView.Placeholder_Password}"
                                                       Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       TabIndex="3"
                                                       CaretBrush="White"/>
                            <fa:ImageAwesome Grid.Column="1" 
                                             Icon="Eye" 
                                             Foreground="{StaticResource Brush.Text.Secondary}" 
                                             Width="14" 
                                             Margin="0,0,15,0" 
                                             VerticalAlignment="Center" 
                                             Opacity="0.7"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource InputContainerStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <custom:PlaceholderTextBox Grid.Column="0"
                                                       Placeholder="{DynamicResource Lang.SignUpView.Placeholder_ConfirmPassword}"
                                                       Text="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                       TabIndex="4"
                                                       CaretBrush="White"/>
                            
                            <fa:ImageAwesome Grid.Column="1" 
                                             Icon="Eye" 
                                             Foreground="{StaticResource Brush.Text.Secondary}" 
                                             Width="14" 
                                             Margin="0,0,15,0" 
                                             VerticalAlignment="Center" 
                                             Opacity="0.7"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Left" 
                                Margin="5,0,0,10">
                        <CheckBox IsChecked="{Binding IsTermsAccepted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  VerticalAlignment="Center"
                                  Cursor="Hand">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="0.85" ScaleY="0.85"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>

                        <TextBlock VerticalAlignment="Center" Margin="8,0,0,0" FontSize="13">
                    <Run Text="{DynamicResource Lang.SignUpView.Terms_Agree}" Foreground="{StaticResource Brush.Text.Secondary}"/>
                    <Hyperlink Command="{Binding GoTermsAndConditionsCommand}" 
                               TextDecorations="None"
                               Foreground="{StaticResource Brush.Brand}">
                        <Run Text="{DynamicResource Lang.SignUpView.Terms_Link}"/>
                    </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <Button Command="{Binding SignUpCommand}"
                            Content="{DynamicResource Lang.SignUpView.Btn_Submit}"
                            Height="50"
                            Margin="0,10,0,0"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Cursor="Hand"
                            TabIndex="5"
                            Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="{StaticResource Brush.Brand}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B30404"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Effect>
                            <DropShadowEffect Color="#F90606" 
                                              BlurRadius="15" 
                                              ShadowDepth="2" 
                                              Direction="270" 
                                              Opacity="1"/>
                        </Button.Effect>
                    </Button>

                    <fa:ImageAwesome Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                            Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,20,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="3" VerticalAlignment="Bottom">
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.Column="0" Height="1" Fill="{StaticResource Brush.Line}" Opacity="0.3" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{DynamicResource Lang.SignUpView.Divider}" Foreground="{StaticResource Brush.Text.Secondary}" FontSize="12" Margin="15,0"/>
                        <Rectangle Grid.Column="2" Height="1" Fill="{StaticResource Brush.Line}" Opacity="0.3" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Command="{Binding SignInWithGoogleCommand}" Grid.Column="0" Style="{StaticResource SocialButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="RenderTransform"/>
                                        </Border.RenderTransform>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Source="/Converto_IT008_WPF;component/Resources/Google.png" Width="16" Height="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <TextBlock Text="Google" Foreground="{StaticResource Brush.Text.Secondary}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button Command="{Binding SignInWithGithubCommand}" Grid.Column="2" Style="{StaticResource SocialButtonStyle}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="RenderTransform"/>
                                        </Border.RenderTransform>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <fa:ImageAwesome Icon="Github" Foreground="White" Width="14" Height="14" Margin="0,0,10,0"/>
                                            <TextBlock Text="Github" Foreground="{StaticResource Brush.Text.Secondary}" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Visibility="{Binding IsTermsPopupVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              d:Visibility="Collapsed">

            <Border Background="Black" Opacity="0.5">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{Binding CloseTermsAndConditionsCommand}"/>
                </Border.InputBindings>
            </Border>

            <views:Terms_ConditionsPopup VerticalAlignment="Center" 
                                         HorizontalAlignment="Center"
                                         Width="500" Height="600"/>
        </Grid>
    </Grid>
</UserControl>