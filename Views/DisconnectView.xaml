<UserControl x:Class="Converto_IT008_WPF.Views.DisconnectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Converto_IT008_WPF.Views"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="BulletPointStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource Brush.BG.Gradient}">

        <Border Background="{DynamicResource Brush.BG.Shape}" 
                CornerRadius="16" 
                Width="500" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Padding="0">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="30,40,30,30">

                    <Grid HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Ellipse Width="80" Height="80" 
                                 Fill="{DynamicResource Brush.Brand}" 
                                 Opacity="0.15"/>

                        <Image Source="/Resources/NoConnection.png" Height="80" VerticalAlignment="Center"/>
                    </Grid>

                    <TextBlock Text="{DynamicResource Lang.DisconnectView.Title}" 
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                    <TextBlock Text="{DynamicResource Lang.DisconnectView.Message}" 
                               Foreground="{DynamicResource Brush.Text.Secondary}"
                               FontSize="14"
                               Margin="0,10,0,25"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>

                    <Grid>
                        <Button Command="{Binding ReloadCommand}"
                                Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                Width="200"
                                Height="45"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                                            Background="{DynamicResource Brush.Brand}" 
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect Color="{StaticResource Color.Brand}" BlurRadius="25" ShadowDepth="0" Opacity="0.6"/>
                                        </Border.Effect>
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="White" TextElement.FontWeight="SemiBold"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            <Setter TargetName="border" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="100" CenterY="22"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="{DynamicResource Lang.DisconnectView.Btn_Retry}" FontSize="15" Foreground="White"/>
                        </Button>

                        <StackPanel Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <fa:ImageAwesome Icon="Refresh" Spin="True" Width="30" Height="30" Foreground="{DynamicResource Brush.Brand}"/>
                            <TextBlock Text="{DynamicResource Lang.DisconnectView.Status_Connecting}" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,5,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Border Grid.Row="1" Background="{DynamicResource Brush.Stroke}" Height="2" Margin="0,0,0,0"/>

                <StackPanel Grid.Row="2" Margin="30,25,30,40" Background="Transparent">
                    <TextBlock Text="{DynamicResource Lang.DisconnectView.Checks_Title}" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="18" 
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>

                    <StackPanel HorizontalAlignment="Left" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="•" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                            <TextBlock Text="{DynamicResource Lang.DisconnectView.Check_1}" Style="{StaticResource BulletPointStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="•" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                            <TextBlock Text="{DynamicResource Lang.DisconnectView.Check_2}" Style="{StaticResource BulletPointStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="•" Foreground="{DynamicResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                            <TextBlock Text="{DynamicResource Lang.DisconnectView.Check_3}" Style="{StaticResource BulletPointStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</UserControl>