<Window x:Class="Converto.ExitConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
        Title="{DynamicResource Lang.ExitConfirmationDialog.Title}"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Converto_IT008_WPF;component/Resources/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="DialogButtonStyle" TargetType="Button">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Width" Value="130"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource Brush.BG.Shape}" 
            CornerRadius="16" 
            Margin="10"
            Padding="0,0,0,10" 
            BorderBrush="{StaticResource Brush.Stroke}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="10" Opacity="0.5" Color="Black" Direction="270"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Grid Width="60" Height="60">
                    <Ellipse Fill="{StaticResource Brush.Brand}" Opacity="0.15"/>
                    <fa:FontAwesome Icon="PowerOff" FontSize="24" Foreground="{StaticResource Brush.Brand}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="{DynamicResource Lang.ExitConfirmationDialog.Header}" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="{DynamicResource Lang.ExitConfirmationDialog.Message}" FontSize="14" Foreground="{StaticResource Brush.Text.Secondary}" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="{DynamicResource Lang.ExitConfirmationDialog.Btn_Cancel}" Click="BtnNo_Click" Style="{StaticResource DialogButtonStyle}" Background="Transparent" Foreground="White" BorderBrush="{StaticResource Brush.Line}" BorderThickness="1" Margin="0,0,15,0"/>
                <Button Content="{DynamicResource Lang.ExitConfirmationDialog.Btn_Confirm}" Click="BtnYes_Click" Style="{StaticResource DialogButtonStyle}" Background="{StaticResource Brush.Brand}" Foreground="White">
                    <Button.Effect>
                        <DropShadowEffect Color="{StaticResource Color.Brand}" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>