<UserControl x:Class="Converto_IT008_WPF.Views.ServiceViews.RemoveBackgroundView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Converto_IT008_WPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000"
             Background="{StaticResource Brush.MainBG}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <local:DropEventArgsConverter x:Key="DropEventArgsConverter"/>
        <local:BytesToMegabytesConverter x:Key="BytesToMegabytesConverter"/>
        <local:RelativeTimeConverter x:Key="RelativeTimeConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.MainBG}">

        <ScrollViewer VerticalScrollBarVisibility="Hidden" >
            <StackPanel Margin="50,40,50,40">
                <TextBlock Text="Remove background" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           FontSize="32"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Remove your image background with high quality" 
                           FontSize="14" 
                           Foreground="{StaticResource Brush.Text.Secondary}" 
                           Margin="0,0,0,30"/>

                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <Grid Height="300">
                            <Border x:Name="UploadZoneBackground" 
                                            Background="{StaticResource Brush.BG.Shape}" 
                                            CornerRadius="12" 
                                            Opacity="0.5"/>
                            
                            <Rectangle x:Name="UploadZoneBorder"
                                       Stroke="{StaticResource Brush.Text.Secondary}" 
                                       StrokeThickness="1" 
                                       StrokeDashArray="4 4" 
                                       RadiusX="12" RadiusY="12"
                                       Fill="Transparent"
                                       IsHitTestVisible="False"
                                       Opacity="0.5"/>

                            <Grid AllowDrop="True" 
                                  DragOver="Image_DragOver"
                                  DragEnter="Image_DragEnter"
                                  DragLeave="Image_DragLeave"
                                  Background="Transparent"
                                  Cursor="Hand"
                                  Visibility="{Binding NotUploaded, Converter={StaticResource BoolToVisibilityConverter}}" 
                                  Drop="Grid_Drop">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Drop">
                                        <i:InvokeCommandAction Command="{Binding DropFileCommand}" 
                                                               PassEventArgsToCommand="True"
                                                               EventArgsConverter="{StaticResource DropEventArgsConverter}"/>
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="MouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding PickFileCommand}"/>
                                    </i:EventTrigger>

                                </i:Interaction.Triggers>

                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False">
                                    <Grid Margin="0,0,0,15">
                                        <fa:FontAwesome Icon="File" FontSize="50" Foreground="{StaticResource Brush.Brand}"/>
                                        
                                        <fa:FontAwesome Icon="ArrowUp" 
                                                        FontSize="20" 
                                                        Foreground="#1e1e1e" 
                                                        VerticalAlignment="Center" 
                                                        HorizontalAlignment="Center" 
                                                        Margin="0,5,0,0"/>
                                    </Grid>

                                    <TextBlock Text="Click to upload or drop images here" 
                                               Foreground="White" 
                                               FontWeight="SemiBold" 
                                               FontSize="14" 
                                               HorizontalAlignment="Center" 
                                               Margin="0,0,0,5"/>
                                    
                                    <TextBlock Text="PNG, JPG, or WEBP (max. 10MB)" 
                                               Foreground="{StaticResource Brush.Text.Secondary}" 
                                               FontSize="12" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <Grid  Cursor="Hand"
                                   Visibility="{Binding Uploaded, Converter={StaticResource BoolToVisibilityConverter}}">

                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="True">
                                    <Image x:Name="ImgUploadedPreview" 
                                           Source="{Binding BeforeRemoved}" 
                                           Stretch="Uniform" />
                                </StackPanel>
                                <Button Command="{Binding PreviousBeforeImageCommand}"
                                        Opacity="0.7"
                                        BorderThickness="0"
                                        Width="40" Height="30" HorizontalAlignment="Left" Content="Prev" Foreground="{StaticResource Brush.Brand}"/>
                                <Button Command="{Binding NextBeforeImageCommand}"
                                        Opacity="0.7"
                                        BorderThickness="0"
                                        Width="40" Height="30" HorizontalAlignment="Right" Content="Next" Foreground="{StaticResource Brush.Brand}"/>
                                <Button Command="{Binding DeleteCurrentPreviewedFileCommand}" 
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                                        Width="30" Height="30" Background="#88000000" BorderThickness="0" Foreground="White" Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="15" Background="{TemplateBinding Background}">
                                                <fa:FontAwesome Icon="Close" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>

                        </Grid>

                        <Grid Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Command="{Binding PickFileCommand}"
                                    Grid.Column="0" 
                                    Cursor="Hand" 
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Visibility="{Binding Notuploaded, Converter={StaticResource BoolToVisibilityConverter}}">
                                
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="{StaticResource Brush.Brand}"/>
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <fa:FontAwesome Icon="CloudUpload" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <ContentPresenter/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D90404"/>
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                        
                                    </Style>
                                </Button.Style>

                                <Button.Effect>
                                    <DropShadowEffect Color="{StaticResource Color.Brand}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                </Button.Effect>

                                <Button.Content>Upload Image</Button.Content>
                            </Button>

                            <Button Command="{Binding RemoveBackgroundCommand}"
                                    Grid.Column="0" 
                                    Cursor="Hand" 
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="15"
                                    FontWeight="Bold"
                                    IsEnabled="{Binding IsNotBusy}"
                                    Visibility="{Binding Uploaded, Converter={StaticResource BoolToVisibilityConverter}}">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Height" Value="50"/>
                                        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Background" Value="{StaticResource Brush.Brand}"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <fa:FontAwesome Icon="CloudUpload" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <ContentPresenter/>
                                                        </StackPanel>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>

                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Cursor" Value="Arrow"/>
                                            </Trigger>

                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#D90404"/>
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Effect>
                                    <DropShadowEffect Color="{StaticResource Color.Brand}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                </Button.Effect>

                                <Button.Content>Remove background</Button.Content>
                            </Button>

                            <Button Grid.Column="2" 
                                    Command="{Binding ClearUploadFilesCommand}"
                                    Cursor="Hand" 
                                    Height="50" 
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="15"
                                    FontWeight="Bold" Click="Button_Click">
                                
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#1A1A1A"/>

                                        <Setter Property="RenderTransformOrigin" Value="0.5, 0.5"/>
                                        <Setter Property="RenderTransform">
                                            <Setter.Value>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="#33FFFFFF" BorderThickness="1">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#252525"/>
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="1.06" ScaleY="1.06"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                
                                <Button.Content>Clear</Button.Content>
                            </Button>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <Grid Height="300"
                              Visibility="{Binding NotRemoved, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Border BorderBrush="{StaticResource Brush.Brand}" 
                                    BorderThickness="2"
                                    CornerRadius="12" 
                                    ClipToBounds="True">
                                <Border.Background>
                                    <ImageBrush ImageSource="/Resources/TransparentBackground.jpg"
                                            Stretch="UniformToFill"/>
                                </Border.Background>

                                <Grid>
                                    <TextBlock x:Name="TxtPlaceholder" 
                                               Text="Preview will appear here." 
                                               Foreground="Black" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               FontSize="14"
                                               Visibility="{Binding IsNotRemoving, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <fa:ImageAwesome Visibility="{Binding IsRemoving, Converter={StaticResource BoolToVisibilityConverter}}"
                                               Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,20,0,0"/>

                                </Grid>
                            </Border>
                        </Grid>

                        <Grid  Cursor="Hand" Height="300"
                               Visibility="{Binding Removed, Converter={StaticResource BoolToVisibilityConverter}}">

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="True">
                                <Image x:Name="ImgPreview" Source="{Binding AfterRemoved}" Stretch="Uniform" Visibility="Visible"/>
                            </StackPanel>
                            <Button Command="{Binding PreviousAfterImageCommand}"
                                    Opacity="0.7"
                                    BorderThickness="0"
                                    Width="40" Height="30" HorizontalAlignment="Left" Content="Prev" Foreground="{StaticResource Brush.Brand}"/>
                            <Button Command="{Binding NextAfterImageCommand}"
                                    Opacity="0.7"
                                    BorderThickness="0"
                                    Width="40" Height="30" HorizontalAlignment="Right" Content="Next" Foreground="{StaticResource Brush.Brand}"/>
                        </Grid>

                        <Button Margin="0,20,0,0" 
                                Cursor="Hand" 
                                Height="50" 
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="15"
                                FontWeight="Bold"
                                Command="{Binding DownloadImagesCommand}"
                                Visibility="{Binding IsNotDownloading, Converter={StaticResource BoolToVisibilityConverter}}">
                            
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource Brush.Brand}"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <Grid Margin="0,0,10,0" VerticalAlignment="Center">
                                                            <fa:FontAwesome Icon="File" 
                                                                            FontSize="30" 
                                                                            VerticalAlignment="Center" 
                                                                            HorizontalAlignment="Center"
                                                                            Foreground="White"/>

                                                            <fa:FontAwesome Icon="ArrowDown" 
                                                                            FontSize="15" 
                                                                            VerticalAlignment="Center" 
                                                                            HorizontalAlignment="Center"
                                                                            Foreground="Black"
                                                                            Margin="0,4,0,0"/>
                                                        </Grid>
                                                        
                                                        <ContentPresenter VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D90404"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Effect>
                                <DropShadowEffect Color="{StaticResource Color.Brand}" 
                                                  BlurRadius="15" 
                                                  ShadowDepth="2" 
                                                  Direction="270" 
                                                  Opacity="1"/> 
                            </Button.Effect>

                            <Button.Content>Download Image</Button.Content>
                        </Button>

                        <fa:ImageAwesome Visibility="{Binding IsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,20,0,0"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Recently Processed" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,15"/>

                <Border Background="#121212" CornerRadius="10" BorderBrush="#222222" Padding="1">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" CornerRadius="10,10,0,0" Background="#1A1A1A">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="FILENAME" 
                                           Foreground="{StaticResource Brush.Text.Secondary}" 
                                           FontSize="11" 
                                           Margin="20,0,0,0"
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"/>

                                <TextBlock Grid.Column="1" 
                                           Text="DATE" 
                                           Foreground="{StaticResource Brush.Text.Secondary}" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2" 
                                           Text="STATUS" 
                                           Foreground="{StaticResource Brush.Text.Secondary}" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Center"/>

                                <TextBlock Grid.Column="3" 
                                           Text="FILESIZE" 
                                           Foreground="{StaticResource Brush.Text.Secondary}" 
                                           FontSize="11" 
                                           Margin="0,0,20,0"
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Right"/>
                            </Grid>
                            
                        </Border>

                        
                        <fa:ImageAwesome Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                                            Icon="Refresh" Spin="True" Width="40" Height="40" Foreground="{DynamicResource Brush.Brand}" Margin="0,20,0,0"/>
                        <ScrollViewer  Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                       >
                            <ItemsControl ItemsSource="{Binding UserTasks}" Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#33FFFFFF" BorderThickness="0,1,0,0" Padding="20,12">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="1.5*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding OriginalFilePath}" TextTrimming="CharacterEllipsis" Foreground="White" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="1" Text="{Binding CreatedAt, Converter={StaticResource RelativeTimeConverter}}" HorizontalAlignment="Center" Foreground="White" VerticalAlignment="Center"/>

                                                <Border Grid.Column="2" Background="#332ECC71" CornerRadius="12" HorizontalAlignment="Center" Padding="15,4">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#2ECC71" BlurRadius="5" ShadowDepth="0" Opacity="0.2"/>
                                                    </Border.Effect>

                                                    <TextBlock Text="Completed" Foreground="#2ECC71" FontWeight="SemiBold" FontSize="12"/>
                                                </Border>

                                                <TextBlock Grid.Column="3" Text="{Binding OutputFileSize, Converter={StaticResource BytesToMegabytesConverter}}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                           
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>