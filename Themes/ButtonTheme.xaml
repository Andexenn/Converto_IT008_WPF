<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF">
    <Style TargetType="{x:Type RadioButton}" x:Key="MenuButtonTheme">
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\INTER-VARIABLEFONT_OPSZ,WGHT.TTF"/>
        <Setter Property="FontWeight" Value="Regular" />
        <Setter Property="FontSize" Value="12.5"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Foreground" Value="#4F4E4E"/>
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">

                    <Grid x:Name="Root">

                        <Grid.Background>
                            <SolidColorBrush x:Name="BgBrush" Color="#00FFFFFF"/>
                        </Grid.Background>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <fa:FontAwesome x:Name="Icon"
                             Icon="{TemplateBinding Tag}"
                             VerticalAlignment="Center"
                             Padding="10,0,0,0"
                             Margin="0,0,10,0">
                            <fa:FontAwesome.Foreground>
                                <SolidColorBrush x:Name="IconBrush" Color="#4F4E4E"/>
                            </fa:FontAwesome.Foreground>
                        </fa:FontAwesome>

                        <TextBlock x:Name="Text"
                                     Grid.Column="1"
                                     Text="{TemplateBinding Content}"
                                     VerticalAlignment="Center"
                                     Padding="10,0,0,0">
                            <TextBlock.Foreground>
                                <SolidColorBrush x:Name="TextBrush" Color="#4F4E4E"/>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <Border x:Name="HoverOverlay"
                                Background="#20DD2D2D"  
                                Opacity="0"
                                Grid.ColumnSpan="2"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter TargetName="Icon" Property="Foreground" Value="#FFDD2D2D"/>
                            <Setter TargetName="Text" Property="Foreground" Value="#FFDD2D2D"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="HoverOverlaySb">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0.8" Duration="0:0:0.12"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <RemoveStoryboard BeginStoryboardName="HoverOverlaySb"/>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="HoverOverlay"
                                     Storyboard.TargetProperty="Opacity"
                                     To="0" Duration="0:0:0.12"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Checked -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BgBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#FFD7CF" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="TextBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#FFDD2D2D" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="IconBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#FFDD2D2D" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BgBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#00FFFFFF" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="TextBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#4F4E4E" Duration="0:0:0.15"/>
                                        <ColorAnimation Storyboard.TargetName="IconBrush"
                                                          Storyboard.TargetProperty="Color"
                                                          To="#4F4E4E" Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <!--Signup Button Style-->
    <Style TargetType="Button" 
           x:Key="Signup">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#F24822"/>
        <Setter Property="Foreground" Value="#F24822"/>
        <Setter Property="FontSize" Value="18"/>
