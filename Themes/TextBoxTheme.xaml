<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:PlaceholderTextBoxControl">
    <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />


    <Style TargetType="{x:Type local:PlaceholderTextBox}" x:Key="Search">
        <Setter Property="Height" Value="40"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\MONTSERRAT-SEMIBOLD.TTF"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Width" Value="450"/>
        <Setter Property="Opacity" Value="0.3"/>
        <Setter Property="Cursor" Value="IBeam"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PlaceholderTextBox}">
                    <Border Background="White" 
                        BorderBrush="#4F4E4E" 
                        BorderThickness="0.5" 
                        CornerRadius="5"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <fa:FontAwesome Icon="{x:Static fa:FontAwesomeIcon.Search}" 
                                        Width="20" Height="20" 
                                        Margin="10,0,0,0" 
                                        Opacity="0.5" 
                                        FontWeight="Thin"
                                        VerticalAlignment="Center"
                                        Foreground="#4F4E4E"
                                        Grid.Column="0"/>

                            <Grid Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center">

                                <TextBlock Text="{TemplateBinding Placeholder}"
                                       Foreground="#4F4E4E"
                                       Opacity="0.5"
                                       VerticalAlignment="Center"
                                       Margin="2,0,0,0"
                                       Visibility="{TemplateBinding IsEmpty, Converter={StaticResource BoolToVisConverter}}"/>

                                <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center"
                                          Background="Transparent"/>
                            </Grid>

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="local:PlaceholderTextBox" x:Key="Input">
        <Setter Property="Height" Value="35"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\MONTSERRAT-SEMIBOLD.TTF"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Cursor" Value="IBeam"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:PlaceholderTextBox">
                    <Border Background="White"
                        BorderBrush="#4F4E4E"
                        BorderThickness="1"
                        CornerRadius="3"
                        SnapsToDevicePixels="True">
                        <Grid>

                            <TextBlock x:Name="PlaceholderText"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Padding="8 2"
                                   Foreground="#888888" 
                                   IsHitTestVisible="False"
                                   Visibility="Collapsed"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   
                                   Text="{Binding Placeholder, RelativeSource={RelativeSource TemplatedParent}}"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Center"
                                      Background="Transparent"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEmpty" Value="True"/>

                                <Condition Property="IsFocused" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxv2" >
        <Setter Property="Height" Value="35"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\MONTSERRAT-SEMIBOLD.TTF"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Width" Value="300"/>
        <Setter Property="Cursor" Value="IBeam"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="White" 
                            BorderBrush="#4F4E4E" 
                            BorderThickness="1" 
                            CornerRadius="3"
                            SnapsToDevicePixels="True">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="10,0,10,0" 
                                          VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="InputSignup">
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\INTER-VARIABLEFONT_OPSZ,WGHT.TTF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border BorderThickness="1"
                            BorderBrush="#4F4E4E"
                            Background="Transparent"
                            CornerRadius="3">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Uid}" Margin="5,0,0,0" Foreground="#4F4E4E"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="5,0,10,0" 
                                          VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxSignUp">
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\INTER-VARIABLEFONT_OPSZ,WGHT.TTF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type PasswordBox}">
                    <Border BorderThickness="1"
                        BorderBrush="#4F4E4E"
                        Background="Transparent"
                        CornerRadius="3">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Uid}" Margin="5,0,0,0" Foreground="#4F4E4E"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                      Margin="5,0,10,0" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>