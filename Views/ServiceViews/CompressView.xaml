<UserControl x:Class="Converto_IT008_WPF.Views.ServiceViews.CompressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Converto_IT008_WPF.Views.ServiceViews"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White" Height="538">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox Grid.Column="1" Text="Search" Style="{StaticResource Search}"/>

            <Grid Grid.Row="1" Margin="0,40,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Video &amp; Audio" Style="{StaticResource HeaderHomepage}"/>
                <Border Grid.Column="1" BorderThickness="1 0 0 0" Height="30" BorderBrush="#4F4E4E"/>
                <TextBlock Text="Image" Grid.Column="2" Style="{StaticResource HeaderHomepage}"/>
                <Border Grid.Column="3" BorderThickness="1 0 0 0" Height="30" BorderBrush="#4F4E4E"/>
                <TextBlock Text="PDF &amp; Document" Grid.Column="4" Style="{StaticResource HeaderHomepage}"/>
                <Border Grid.Column="5" BorderThickness="1 0 0 0" Height="30" BorderBrush="#4F4E4E"/>
                <TextBlock Text="GIF" Grid.Column="6" Style="{StaticResource HeaderHomepage}" />

                <Border Grid.Row="1" Grid.ColumnSpan="7" BorderThickness="0.5" BorderBrush="#4F4E4E" Margin="0,15,0,15"/>

                <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center">
                    <Button Content="Video Compressor" Style="{StaticResource TextOption}"/>
                    <Button Content="MP3 Compressor" Style="{StaticResource TextOption}"/>
                    <Button Content="WAV Compressor" Style="{StaticResource TextOption}"/>

                </StackPanel>

                <Border Grid.Row="2" Grid.Column="1" BorderThickness="1 0 0 0" Height="350" BorderBrush="#4F4E4E" Margin="0,5,0,0" VerticalAlignment="Top"/>

                <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center">
                    <Button Content="Image Compressor" Style="{StaticResource TextOption}"/>
                    <Button Content="JPEG Compressor" Style="{StaticResource TextOption}"/>
                    <Button Content="PNG Compressor" Style="{StaticResource TextOption}"/>
                </StackPanel>

                <Border Grid.Row="2" Grid.Column="3" BorderThickness="1 0 0 0" Height="350" BorderBrush="#4F4E4E" Margin="0,5,0,0" VerticalAlignment="Top"/>

                <StackPanel Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center">
                    <Button Content="PDF Compressor" Style="{StaticResource TextOption}"/>
                </StackPanel>

                <Border Grid.Row="2" Grid.Column="5" BorderThickness="1 0 0 0" Height="350" BorderBrush="#4F4E4E" Margin="0,5,0,0" VerticalAlignment="Top"/>

                <StackPanel Grid.Row="2" Grid.Column="6" HorizontalAlignment="Center">
                    <Button Content="GIF Compressor" Style="{StaticResource TextOption}"/>
                </StackPanel>
            </Grid>

        </Grid>

    </ScrollViewer>
</UserControl>
