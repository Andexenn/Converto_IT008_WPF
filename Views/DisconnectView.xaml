<UserControl x:Class="Converto_IT008_WPF.Views.DisconnectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Converto_IT008_WPF.Views"
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel Background="#FFFBFBFB"> 
            <Image Source="/Resources/no-connection.png" Margin="0,44,0,0" Width="150" />
            <TextBlock Text="Unable to connect to the Internet" HorizontalAlignment="Center" Margin="0,48,0,0" 
                               FontWeight="Bold"
                               FontSize="30"/>
            <TextBlock Text="CONVERTO can’t display the page because your computer isn’t connected to the Internet."
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"
                               FontSize="16"/>


            <fa:ImageAwesome Icon="Refresh" Spin="True" Width="48" Height="48" Margin="0,56,0,0" Foreground="#23772E"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <Button Content="Reload"
                    Command="{Binding ReloadCommand}"
                    Width="250" 
                    Margin="0,56,0,0" 
                    Height="40"
                    Foreground="White"
                    Background="#F24822"
                    Visibility="{Binding IsNotBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                    Style="{StaticResource CTA}">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
