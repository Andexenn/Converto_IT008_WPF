    <Style TargetType="TextBox" x:Key="InputSignup">
        <Setter Property="Cursor" Value="IBeam"/>
        <Setter Property="FontFamily" Value="D:\Ryan\App_project\Converto_IT008_WPF\Resources\INTER-VARIABLEFONT_OPSZ,WGHT.TTF"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="45"/>
        <Setter Property="Foreground" Value="Black"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border BorderThickness="1"
                            BorderBrush="#4F4E4E"
                            Background="Transparent"
                            CornerRadius="3">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Uid}" Margin="5,0,0,0" Foreground="#4F4E4E"/>
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="5,0,10,0" 
                                          VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

